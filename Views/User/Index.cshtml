@{
    ViewData["Title"] = "Home Page";
}
@using Microsoft.AspNetCore.Mvc.ViewFeatures
@using Microsoft.AspNetCore.Html
@using System.Linq.Expressions


@model PostApplication.Models.LoginViewModel

<html>
<head>
    <meta charset="utf-8">
    <!-- importer le fichier de style -->
    <link rel="stylesheet" href="~/css/site.css" media="screen" type="text/css" />
</head>
<body>

    <div id="container">
        <!-- zone de connexion -->



        <form action="" method="POST">
            <h1>Connexion</h1>

            <label asp-for="Input.Email"><b>Nom d'utilisateur</b></label>
            <input asp-for="Input.Email" type="text" placeholder="Entrer le nom d'utilisateur" required />
            <span asp-validation-for="Input.Email"  class="text-danger"></span>


            <label asp-for="Input.Password"><b>Mot de passe</b></label>
            <input asp-for="Input.Password" type="password" placeholder="Entrer le mot de passe" required />
            <span asp-validation-for="Input.Password" class="text-danger"></span>

            <div class="form-group">
                <div class="form-check">
                    <input asp-for="Input.RememberMe" class="form-check-input" />
                    <label asp-for="Input.RememberMe" class="form-check-label">Remember me</label>
                </div>
            </div>
        
            <input type="submit" id='submit' class="btn btn-primary" value='LOGIN'>

        </form>
    </div>
</body>
</html>