@{
    ViewData["Title"] = "Home Page";
}

<html>
<head>
    <meta charset="utf-8">
    <!-- importer le fichier de style -->
    
</head>
<body>
 @model Register

    <form   asp-controller="User" asp-action="Register" method="post">
        <div class="form-group col-md-6">
            <label for="firstname">FirstName</label>
            <input type="text" class="form-control" id="idfirstname" asp-for="FirstName" placeholder="FirstName">
        </div>
        <div class="form-group col-md-6">
            <label for="LastName">LastName</label>
            <input type="text" class="form-control" id="idLastName" asp-for="lastName" placeholder="LastName">
        </div>
        <div class="form-group col-md-6">
        <label for="email">Email address</label>
            <input type="email" class="form-control" id="idEmail1" aria-describedby="emailHelp" asp-for="Email" placeholder="Enter email">
    </div>
        <div class="form-group col-md-6">
        <label for="Password">Password</label>
            <input type="password" class="form-control" id="idPassword" asp-for="Password" placeholder="Password">
    </div>
        <div class="form-group col-md-6">
            <label for="ConfirmPassword">Confirm Your Password</label>
            <input type="password" class="form-control" id="idPassword1" asp-for="ConfirmPassword" placeholder=" ">
        </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="exampleCheck1">
        <label class="form-check-label" for="exampleCheck1">Check me out</label>
    </div>
    <button type="submit"  class="btn btn-primary">Next</button>
</form>
     
</body>
</html>